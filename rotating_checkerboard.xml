<?xml version="1.0" standalone="no"?>
<monkeyml version="1.0">
    <io_devices tag="IO Devices">
        <iodevice type="mouse_input" tag="Mouse Input Device" mouse_position_x="eye_x" mouse_position_y="eye_y" mouse_down="mouse_click" hide_cursor="NO"></iodevice>
        <iodevice tag="Fake Monkey" spike_rate="" priority="" type="fake_monkey" alt="">
            <iochannel tag="Juice" variable="" type="juice"></iochannel>
        </iodevice>
    </io_devices>
    <variables tag="Variables">
        <folder tag="fixation">
            <variable tag="fixation_duration" scope="global" logging="when_changed" exclude_from_data_file="NO" default_value="1000" type="float"></variable>
            <variable tag="eye_in_window" scope="global" logging="when_changed" exclude_from_data_file="NO" default_value="0" type="integer"></variable>
            <variable tag="fix_window" scope="global" logging="when_changed" exclude_from_data_file="NO" default_value="1" type="float"></variable>
            <variable tag="eye_x" scope="global" logging="when_changed" exclude_from_data_file="NO" default_value="0" type="float"></variable>
            <variable tag="eye_y" scope="global" logging="when_changed" exclude_from_data_file="NO" default_value="0" type="float"></variable>
        </folder>
        <variable tag="mouse_click" scope="global" logging="when_changed" exclude_from_data_file="NO" default_value="0" type="any"></variable>
        <folder tag="wedge">
            <variable tag="wedge_sizex" scope="global" logging="when_changed" exclude_from_data_file="NO" default_value="30" type="float"></variable>
            <variable tag="wedge_sizey" scope="global" logging="when_changed" exclude_from_data_file="NO" default_value="30" type="float"></variable>
        </folder>
        <folder tag="checkerboard">
            <variable tag="deg_per_sec" scope="global" logging="when_changed" exclude_from_data_file="NO" default_value="180" type="float"></variable>
            <variable tag="checkerboard_size" scope="global" logging="when_changed" exclude_from_data_file="NO" default_value="20" type="float"></variable>
        </folder>
        <folder tag="trial">
            <variable tag="consecutive_correct" scope="global" logging="when_changed" exclude_from_data_file="NO" default_value="0" type="integer"></variable>
            <variable tag="trial_duration" scope="global" logging="when_changed" exclude_from_data_file="NO" default_value="30" type="float"></variable>
        </folder>
    </variables>
    <sounds tag="Sounds"></sounds>
    <stimuli tag="Stimuli">
        <stimulus type="fixation_point" tag="fixation_point" color="1,1,1" trigger_width="fix_window" trigger_watch_x="eye_x" trigger_watch_y="eye_y" trigger_flag="eye_in_window" x_size="0.2" y_size="0.2" x_position="0" y_position="0" rotation="0.0" alpha_multiplier="1.0"></stimulus>
        <stimulus_group tag="wedges">
            <stimulus type="image_file" tag="wedge_vm" path="vm.png" x_size="5.0" y_size="5.0" x_position="0.0" y_position="0.0" rotation="0.0" alpha_multiplier="1.0" deferred="NO"></stimulus>
            <stimulus type="image_file" tag="wedge_hm" path="hm.png" x_size="wedge_sizex" y_size="wedge_sizey" x_position="0.0" y_position="0.0" rotation="0.0" alpha_multiplier="1.0" deferred="NO"></stimulus>
        </stimulus_group>
        <stimulus type="frame_list" tag="frame_list" stimulus_group="frames" ending="" ended="" loop="YES" repeats="0" autoplay="YES"></stimulus>
        <stimulus_group tag="frames">
            <stimulus type="image_file" tag="checkerboard" path="checkerboard.png" x_size="checkerboard_size" y_size="checkerboard_size" x_position="0.0" y_position="0.0" rotation="(now() / 1e6) * deg_per_sec" alpha_multiplier="1.0" deferred="NO"></stimulus>
        </stimulus_group>
    </stimuli>
    <filters tag="Filters"></filters>
    <optimizers tag="Optimizers"></optimizers>
    <experiment tag="checkerboard_mapping" full_name="HM/VM checkerboard mapping" description="">
        <protocol tag="Mapping" nsamples="1" sampling_method="cycles" selection="random_without_replacement" interruptible="YES">
            <trial tag="HM" nsamples="1" sampling_method="cycles" selection="sequential" interruptible="YES">
                <task_system tag="New Task System" interruptible="YES">
                    <task_system_state tag="Give reward" interruptible="YES">
                        <action_marker _unmoveable="1" tag="Actions"></action_marker>
                        <transition_marker _unmoveable="1" tag="Transitions"></transition_marker>
                    </task_system_state>
                    <task_system_state tag="Initialize stimuli" interruptible="YES">
                        <action_marker _unmoveable="1" tag="Actions"></action_marker>
                        <action tag="Start IO Device" type="start_device_IO" device="Mouse Input Device"></action>
                        <action tag="Queue rotating checkerboard" type="live_queue_stimulus" stimulus="frame_list"></action>
                        <action tag="Queue wedge mask" type="live_queue_stimulus" stimulus="wedge_hm"></action>
                        <action tag="Queue fixation point" type="live_queue_stimulus" stimulus="fixation_point"></action>
                        <action tag="Update display" type="update_stimulus_display" predicted_output_time=""></action>
                        <action type="start_timer" tag="Start stimulus timer" timer="stimulus_duration" timebase="" duration="trial_duration" duration_units="s"></action>
                        <transition_marker _unmoveable="1" tag="Transitions"></transition_marker>
                        <transition type="direct" tag="Always Go to ..." target="Reward while fixating"></transition>
                    </task_system_state>
                    <task_system_state tag="Reward while fixating" interruptible="YES">
                        <action_marker _unmoveable="1" tag="Actions"></action_marker>
                        <action type="wait_for_condition" tag="Wait for fixation" condition="eye_in_window" timeout="" timeout_message="" stop_on_timeout="YES"></action>
                        <action type="start_timer" tag="Start fixation timer" timer="fixation_duration" timebase="" duration="fixation_duration" duration_units="ms"></action>
                        <transition_marker _unmoveable="1" tag="Transitions"></transition_marker>
                    </task_system_state>
                    <task_system_state tag="Exit State System" interruptible="YES">
                        <action_marker _unmoveable="1" tag="Actions"></action_marker>
                        <action tag="Dequeue frame list" type="dequeue_stimulus" stimulus="frame_list"></action>
                        <action tag="Update display" type="update_stimulus_display" predicted_output_time=""></action>
                        <transition_marker _unmoveable="1" tag="Transitions"></transition_marker>
                        <transition tag="Return to parent task system" type="yield"></transition>
                    </task_system_state>
                </task_system>
            </trial>
        </protocol>
    </experiment>
</monkeyml>